<ion-header>

  <ion-navbar>
    <ion-title>Media</ion-title>
  </ion-navbar>

</ion-header>


<ion-content padding>

  <button ion-item (click)="uploadImage()">多图上传</button>
  <button ion-item (click)="takeImage()">拍照上传</button>
  <button ion-item (click)="uploadVideo()">选择视频上传</button>
  <button ion-item (click)="uploadFile()">上传文件调原生网络请求方法</button>

  <ion-card *ngFor="let item of pics ; let i = index">

    <ion-card-header>
      {{i}}
    </ion-card-header>

    <ion-card-content>
      <img [src]="item">
    </ion-card-content>

  </ion-card>
</ion-content>
